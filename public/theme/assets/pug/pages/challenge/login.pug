- var login               = true;

doctype html
html(lang='en')
    include ../../components/header-files
    body
        include ../../components/loader       

        // page-wrapper Start
        .container-fluid
          .row
            .col-xl-5(style="background-color: rgba(99,98,231,0.1);")
              img.bg-img-cover.bg-center(src="/theme/assets/images/login/loginRealFevr.png" alt="loginpage")
            .col-xl-7.p-0
              .login-card
                form.theme-form.login-form.needs-validation(novalidate='')
                  h4 Login
                  h6 Welcome back! Log in to your account.
                  .form-group
                    label Email Address
                    .input-group
                      span(class="input-group-text")
                        i.icon-email
                      input.form-control.username(type='email', required='' placeholder='Test@gmail.com')
                      .invalid-tooltip
                        | Please enter proper email.
                  .form-group
                    label Password
                    .input-group
                      span(class="input-group-text")
                        i.icon-lock
                      input.form-control.username(type='password', name='login[password]', required='' placeholder="*********")
                      .invalid-tooltip
                       | Please enter password.
                      .show-hide
                        span.show                          
                  .form-group
                    .checkbox
                      input#checkbox1.rememberme(type='checkbox')
                      label.text-muted(for='checkbox1') Remember password                    
                  .form-group
                    button.btn.btn-primary.btn-block(type='submit') Sign in        
        include ../../components/footer-files