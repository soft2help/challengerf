{% trans_default_domain 'messages' %}

{% extends 'base.html.twig' %}
{% block header %}
    <h1>
        {{ 'app.profile.account'|trans }}
        <small>{{ app.user.email }}</small>
    </h1>
{% endblock %}
{% block content %}
<!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="{{ asset('build/images/logo-small.png') }}" alt="User profile picture">

                        <h3 class="profile-username text-center">{{ user.email }}</h3>

                        <p class="text-muted text-center">                           
                            {{ display_role(app.user) | trans }} 
                            {% if app.user.company %} 
                                | {{ app.user.company.tipo | trans |capitalize }} 
                            {% endif %}                            
                        </p>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>{{ 'app.profile.last_login'|trans }}</b> <a class="pull-right">{{ app.user.previousLogin|date("d/m/Y H:i:s") }}</a>
                            </li>
                        </ul>
						<a href="{{ path('fos_user_change_password') }}">{{ 'app.profile.change_password'|trans }}</a><br>
                        {#<a href="{{ path('app_profile_update') }}" class="btn btn-primary btn-block"><b>Update profile</b></a>#}
                    </div>
                    <!-- /.box-body -->
                </div>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
    <!-- /.content -->
{%endblock%}
