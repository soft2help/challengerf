{% block subject %}
    {%- autoescape false -%}
        {{ 'resetting.email.subject'|trans({'%username%': user.username}) }}
    {%- endautoescape -%}
{% endblock %}

{% block body_text %}
    {% autoescape false %}
        {{ 'resetting.email.message'|trans({'%username%': user.username,'%email%': user.email, '%confirmationUrl%': confirmationUrl}) }}
    {% endautoescape %}
{% endblock %}
